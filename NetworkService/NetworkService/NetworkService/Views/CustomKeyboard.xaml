                Width="30"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter="L"
                Content="L" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                Width="30"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter="Z"
                Content="Z" />
            <Button
                Width="30"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter="X"
                Content="X" />
            <Button
                Width="30"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter="C"
                Content="C" />
            <Button
                Width="30"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter="V"
                Content="V" />
            <Button
                Width="30"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter="B"
                Content="B" />
            <Button
                Width="30"
                Height="30"
                Margin="3"
                Background="White"
                Command="{Binding ButtonPressCommand}"
                CommandParameter="N"
                Content="N" />
            <Button
                Width="30"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter="M"
                Content="M" />
            <Button
                Width="30"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter=","
                Content="," />
            <Button
                Width="30"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter="."
                Content="." />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                Width="50"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter="DEL"
                Content="DEL" />
            <Button
                Width="200"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter=" "
                Content="SPACE" />
            <Button
                Width="50"
                Height="30"
                Margin="3"
                Command="{Binding ButtonPressCommand}"
                CommandParameter="ENTER"
                Content="ENTER" />

        </StackPanel>
    </StackPanel>
</UserControl>
