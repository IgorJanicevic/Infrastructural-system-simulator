                                <Canvas
                                    Name="Canvas1"
                                    Height="85"
                                    Margin="2"
                                    AllowDrop="True"
                                    Background="White"
                                    DockPanel.Dock="Top">
                                    <Image
                                        Canvas.Top="-4"
                                        Width="63"
                                        Height="63"
                                        Margin="12"
                                        Source="{Binding EntitesInCanvas[0].Entity.ImagePath}" />
